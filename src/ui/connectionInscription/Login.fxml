<VBox prefHeight="450.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.connectionInscription.LoginController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <top>
            <GridPane prefHeight="128.0" prefWidth="599.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="305.0" minWidth="10.0" prefWidth="301.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="301.0" minWidth="10.0" prefWidth="298.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="0.0" prefWidth="106.0" text="LOGIN" textFill="#26229a" GridPane.columnIndex="1">
                     <font>
                        <Font name="System Bold" size="34.0" />
                     </font>
                  </Label>
                  <ImageView fitHeight="128.0" fitWidth="148.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER">
                     <image>
                        <Image url="@../../../assets/logoPolyshare.png" />
                     </image>
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin>
                  </ImageView>
               </children>
            </GridPane>
         </top>
         <bottom>
            <Label fx:id="errorText" prefHeight="17.0" prefWidth="167.0" textFill="RED" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <GridPane GridPane.columnIndex="1" GridPane.rowIndex="4">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="20.0" minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="20.0" minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#login" text="Sign in" GridPane.rowIndex="1">
      </Button>
                  <Button fx:id="btnSignUp" mnemonicParsing="false" onAction="#signup" text="Sign up" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
      </Button>
               </children>
            </GridPane>
            <Label text="Email :" GridPane.columnIndex="1" GridPane.halignment="CENTER">
               <font>
                  <Font name="System Bold" size="21.0" />
               </font>
            </Label>
            <TextField fx:id="txtEmailStudent" alignment="CENTER_RIGHT" prefHeight="27.0" prefWidth="167.0" promptText="Your email adress" GridPane.columnIndex="1" GridPane.rowIndex="1">
      </TextField>
            <Label text="Password :" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <PasswordField fx:id="txtPassWord" alignment="CENTER_RIGHT" promptText="Your password" GridPane.columnIndex="1" GridPane.rowIndex="3">
      </PasswordField>
         </children>
      </GridPane>
   </children>
</VBox>
