<VBox prefHeight="594.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.connectionInscription.SignUpController">
   <children>
      <BorderPane prefHeight="106.0" prefWidth="600.0">
         <center>
            <Label text="Welcome to PolyShare" textFill="#1e08e4" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Apple Chancery" size="35.0" />
               </font>
            </Label>
         </center>
         <bottom>
            <Label fx:id="errorLabel" prefHeight="17.0" prefWidth="167.0" textFill="RED" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="208.0" minWidth="10.0" prefWidth="202.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="216.0" minWidth="10.0" prefWidth="159.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="117.0" minWidth="10.0" prefWidth="43.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="212.0" minWidth="10.0" prefWidth="159.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="115.0" minWidth="10.0" prefWidth="38.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Name" textFill="#1e08e4" GridPane.halignment="CENTER" GridPane.rowIndex="1">
               <font>
                  <Font size="21.0" />
               </font>
            </Label>
            <TextField fx:id="firstNameField" alignment="CENTER_RIGHT" prefHeight="27.0" prefWidth="160.0" promptText="First name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="nameField" alignment="CENTER_RIGHT" prefHeight="27.0" prefWidth="169.0" promptText="Last name" GridPane.columnIndex="3" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <GridPane prefHeight="298.0" prefWidth="600.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="202.0" minWidth="10.0" prefWidth="191.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="425.0" minWidth="10.0" prefWidth="363.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="118.0" minWidth="0.0" prefWidth="35.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Email" textFill="#1e08e4" GridPane.halignment="CENTER" GridPane.rowIndex="1">
               <font>
                  <Font size="21.0" />
               </font>
            </Label>
            <TextField fx:id="emailField" alignment="CENTER_RIGHT" prefHeight="26.0" prefWidth="286.0" promptText="Your email adress" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Password" textFill="#1e08e4" GridPane.halignment="CENTER" GridPane.rowIndex="3">
               <font>
                  <Font name="System Bold" size="21.0" />
               </font>
            </Label>
            <PasswordField id="passwordField" fx:id="passwordField" alignment="CENTER_RIGHT" prefHeight="26.0" prefWidth="239.0" promptText="Your password" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <PasswordField id="passwordConfirmField" fx:id="passwordConfirmField" alignment="CENTER_RIGHT" prefHeight="26.0" prefWidth="239.0" promptText="Password confirmation" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Login" textFill="#1e08e4" GridPane.halignment="CENTER" GridPane.rowIndex="6">
               <font>
                  <Font size="21.0" />
               </font>
            </Label>
            <TextField fx:id="loginIDField" alignment="CENTER_RIGHT" prefHeight="27.0" prefWidth="286.0" promptText="Your login" GridPane.columnIndex="1" GridPane.rowIndex="6" />
         </children>
      </GridPane>
      <BorderPane prefHeight="109.0" prefWidth="600.0">
         <center>
            <Button fx:id="validateNewUserButton" mnemonicParsing="false" onAction="#welcome" prefHeight="26.0" prefWidth="86.0" text="Validate" BorderPane.alignment="CENTER">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </center>
         <bottom>
            <Button mnemonicParsing="false" onAction="#backLogin" text="Exit" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
   </children>
</VBox>
